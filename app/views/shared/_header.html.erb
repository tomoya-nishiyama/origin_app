<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("logo (4).png", class:"origin-icon"), "/" %>
    <%= form_with(url: search_origins_path, method: :get, local: true, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "キーワードで検索する", class: "search-input" %>
      <%= form.collection_select(:category_id, Category.all, :id, :name, {}, {class:"genre-select"}) %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
  </div>

  <div class='nav'>
    <ul class='lists-right'>
    <% if user_signed_in? %>
      <li><%= link_to current_user.name, "#", class: "user-nickname" %></li> 
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
    <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
    <% end %>
    </ul>
  </div>
</header>